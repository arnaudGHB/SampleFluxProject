{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=UserSkillManagementDB;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "Secret": "YOUR_SUPER_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG",
    "Issuer": "CBS.UserSkillManagement.API",
    "Audience": "CBS.UserSkillManagement.Clients",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CorsOrigins": [
    "http://localhost:3000",
    "http://localhost:4200"
  ],
  "ApiSettings": {
    "ApiName": "User Skill Management API",
    "ApiVersion": "v1",
    "ApiDescription": "API for managing user skills and skill assignments",
    "ContactEmail": "support@cbs.com",
    "ContactName": "Support Team",
    "ContactUrl": "https://cbs.com/support"
  },
  "Caching": {
    "Enabled": true,
    "DefaultCacheDurationInMinutes": 30
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "HttpStatusCode": 429,
    "ErrorMessage": "Too many requests. Please try again later.",
    "IpWhitelist": ["::1"],
    "GeneralRules": [
      {
        "Endpoint": "*:/api/*",
        "Period": "1s",
        "Limit": 2
      },
      {
        "Endpoint": "*:/api/*",
        "Period": "15m",
        "Limit": 100
      },
      {
        "Endpoint": "*:/api/*",
        "Period": "12h",
        "Limit": 1000
      }
    ]
  }
}
