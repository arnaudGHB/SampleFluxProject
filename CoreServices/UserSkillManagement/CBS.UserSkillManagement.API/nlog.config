<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\user-skill-management-internal-nlog.txt">

  <!-- Load the ASP.NET Core plugin -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- Define targets to log to -->
  <targets>
    <!-- Write logs to file -->
    <target xsi:type="File" 
            name="allfile" 
            fileName="logs\nlog-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

    <target xsi:type="File" 
            name="ownFile-web" 
            fileName="logs\nlog-own-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />

    <!-- Console output for debugging -->
    <target xsi:type="Console" 
            name="console" 
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

    <!-- Send errors to email (optional) -->
    <!--
    <target xsi:type="Mail"
            name="mail"
            subject="[User Skill Management] ${level}: ${message}"
            to="admin@cbs.com"
            from="noreply@cbs.com"
            smtpServer="smtp.server.com"
            smtpPort="587"
            smtpAuthentication="Basic"
            smtpUserName="user@server.com"
            smtpPassword="password"
            enableSsl="true"
            layout="${message}${newline}${exception:format=tostring}" />
    -->
  </targets>

  <!-- Rules to map from logger name to target -->
  <rules>
    <!-- All logs, including from Microsoft -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />
    
    <!-- Skip Microsoft logs and so log only own logs -->
    <logger name="Microsoft.*" minlevel="Trace" writeTo="ownFile-web" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
    
    <!-- BlackHole for Microsoft and System logs -->
    <logger name="Microsoft.*" minlevel="Trace" final="true" />
    <logger name="System.*" minlevel="Trace" final="true" />
    
    <!-- Application logs -->
    <logger name="CBS.UserSkillManagement.*" minlevel="Debug" writeTo="console,ownFile-web" />
    
    <!-- Send errors to email (uncomment if email target is configured) -->
    <!--
    <logger name="*" minlevel="Error" writeTo="mail" />
    -->
  </rules>
</nlog>
